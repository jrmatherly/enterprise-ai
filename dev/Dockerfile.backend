# Backend Development Dockerfile
# Uses uv for fast dependency management with hot reload via uvicorn
#
# Build context should be the project root (not dev/)

FROM python:3.12-slim

WORKDIR /app

# Install system dependencies (curl for healthcheck)
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

# Copy dependency files first (for layer caching)
COPY pyproject.toml uv.lock README.md ./

# Install ALL dependencies including dev (for migrations, etc.)
ENV UV_SYSTEM_PYTHON=1
RUN uv sync --frozen

# Copy alembic config for migrations
COPY alembic.ini ./

# Source code is mounted as volume for hot reload
# COPY src/ ./src/  # Not needed - volume mount instead

# Expose port
EXPOSE 8000

# Run with hot reload (watch src directory)
CMD ["uv", "run", "uvicorn", "src.api.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload", "--reload-dir", "src"]
