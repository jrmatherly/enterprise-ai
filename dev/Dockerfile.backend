# Backend Development Dockerfile
# Uses official uv image for consistency with production
#
# Build context should be the project root (not dev/)

FROM ghcr.io/astral-sh/uv:python3.12-bookworm-slim

WORKDIR /app

# Install system dependencies (curl for healthcheck)
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy dependency files first (for layer caching)
# README.md is needed for hatchling build (pyproject.toml references it)
COPY pyproject.toml uv.lock README.md ./

# Install ALL dependencies including dev (for migrations, testing, etc.)
# Using --frozen to ensure reproducible installs from lockfile
RUN --mount=type=cache,target=/root/.cache/uv \
    uv sync --frozen --all-extras

# Copy alembic config for migrations
COPY alembic.ini ./

# Copy and set up entrypoint script for automatic migrations
COPY dev/scripts/backend-entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# Source code is mounted as volume for hot reload
# COPY src/ ./src/  # Not needed - volume mount instead

# Expose port
EXPOSE 8000

# Entrypoint runs migrations before starting the app
ENTRYPOINT ["/entrypoint.sh"]

# Run with hot reload (watch src directory)
# Uses uv run to ensure correct virtualenv
CMD ["uv", "run", "uvicorn", "src.api.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload", "--reload-dir", "src"]
