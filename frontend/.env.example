# Enterprise AI Platform - Frontend Environment Variables
# Copy this file to .env.local and update values

# ============================================
# Better Auth Configuration
# ============================================

# Secret for encrypting sessions (generate with: openssl rand -base64 32)
BETTER_AUTH_SECRET=changeme-generate-with-openssl-rand-base64-32

# Base URL for auth endpoints
BETTER_AUTH_URL=http://localhost:3001

# ============================================
# Database (PostgreSQL)
# ============================================

# Connection string for better-auth database
# Uses the same database as the backend for user/session storage
DATABASE_URL=postgresql://postgres:changeme@localhost:5432/eai

# ============================================
# Microsoft Entra ID (Azure AD)
# ============================================

# From Azure Portal > App Registrations
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# ============================================
# API Configuration
# ============================================

# Backend API URL (empty if same origin via Next.js rewrites)
NEXT_PUBLIC_API_URL=
